@{
    ViewData["Title"] = "Service Request Status";
}

<div class="coming-soon-container">
    <div class="coming-soon-content text-center">
        <!-- Animated Icon -->
        <div class="coming-soon-icon mb-4">
            <i class="fas fa-search fa-6x text-primary"></i>
            <div class="icon-decoration">
                <i class="fas fa-chart-line sparkle-1"></i>
                <i class="fas fa-clock sparkle-2"></i>
                <i class="fas fa-check-circle sparkle-3"></i>
            </div>
        </div>

        <!-- Main Title -->
        <h1 class="coming-soon-title mb-3">
            Service Request Status Tracking
        </h1>

        <!-- Coming Soon Badge -->
        <div class="coming-soon-badge mb-4">
            <i class="fas fa-tools me-2"></i>
            Under Development
        </div>

        <!-- Description -->
        <div class="coming-soon-description mb-5">
            <p class="lead mb-4">
                Advanced tracking system to monitor your service requests in real-time!
            </p>
            <p class="text-muted">
                Track the progress of your submitted reports, receive updates on resolution status,
                and get estimated completion times for municipal services.
            </p>
        </div>

        <!-- Features Preview -->
        <div class="features-preview mb-5">
            <div class="row g-4 justify-content-center">
                <div class="col-md-4">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="fas fa-map-marked-alt text-primary"></i>
                        </div>
                        <h6 class="feature-title">Real-Time Tracking</h6>
                        <p class="feature-text">Live updates on your request status and progress</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="fas fa-bell text-success"></i>
                        </div>
                        <h6 class="feature-title">Smart Notifications</h6>
                        <p class="feature-text">Get notified when your request status changes</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="fas fa-history text-info"></i>
                        </div>
                        <h6 class="feature-title">Request History</h6>
                        <p class="feature-text">View complete timeline and resolution details</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Progress Indicator -->
        <div class="progress-section mb-5">
            <div class="progress-info mb-3">
                <h6 class="mb-2">Development Progress</h6>
                <div class="progress-stats">
                    <span class="progress-label">Backend & API Development</span>
                    <span class="progress-percentage">60%</span>
                </div>
            </div>
            <div class="progress-bar-container">
                <div class="progress-bar" style="width: 60%"></div>
                <div class="progress-glow" style="width: 60%"></div>
            </div>
            <small class="text-muted mt-2 d-block">
                Expected completion: Q3 2025
            </small>
        </div>

        <!-- Preview Timeline -->
        <div class="status-preview mb-5">
            <h6 class="mb-4">
                <i class="fas fa-eye me-2"></i>
                Preview: How Status Tracking Will Work
            </h6>
            <div class="preview-timeline">
                <div class="timeline-step completed">
                    <div class="step-icon">
                        <i class="fas fa-paper-plane"></i>
                    </div>
                    <div class="step-content">
                        <h6>Request Submitted</h6>
                        <p>Your issue has been received and logged</p>
                    </div>
                </div>
                <div class="timeline-step completed">
                    <div class="step-icon">
                        <i class="fas fa-eye"></i>
                    </div>
                    <div class="step-content">
                        <h6>Under Review</h6>
                        <p>Municipal team is assessing the request</p>
                    </div>
                </div>
                <div class="timeline-step active">
                    <div class="step-icon">
                        <i class="fas fa-tools"></i>
                    </div>
                    <div class="step-content">
                        <h6>In Progress</h6>
                        <p>Work has begun on resolving the issue</p>
                    </div>
                </div>
                <div class="timeline-step">
                    <div class="step-icon">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <div class="step-content">
                        <h6>Completed</h6>
                        <p>Issue has been successfully resolved</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Call to Action -->
        <div class="coming-soon-actions">
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg me-3">
                <i class="fas fa-home me-2"></i>
                Back to Home
            </a>
            <a asp-controller="ServiceRequest" asp-action="ViewReports" class="btn btn-outline-primary btn-lg">
                <i class="fas fa-list me-2"></i>
                View Current Reports
            </a>
        </div>

        <!-- Current Alternative -->
        <div class="current-alternative mt-5">
            <div class="alternative-card">
                <h6 class="mb-3">
                    <i class="fas fa-lightbulb me-2"></i>
                    Meanwhile...
                </h6>
                <p class="text-muted mb-3">
                    You can currently view all your submitted reports and their basic status information.
                </p>
                <a asp-controller="ServiceRequest" asp-action="ViewReports" class="btn btn-sm btn-outline-secondary">
                    <i class="fas fa-external-link-alt me-2"></i>
                    View My Reports
                </a>
            </div>
        </div>
    </div>

    <!-- Background Animation -->
    <div class="coming-soon-background">
        <div class="floating-shape shape-1"></div>
        <div class="floating-shape shape-2"></div>
        <div class="floating-shape shape-3"></div>
        <div class="floating-shape shape-4"></div>
    </div>
</div>

@section Scripts {
    <script src="~/js/pages/coming-soon.js" asp-append-version="true"></script>
}