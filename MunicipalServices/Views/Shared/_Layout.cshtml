<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Municipal Services Portal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <!-- Custom CSS Files -->
    <link rel="stylesheet" href="~/css/base/variables.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/components/navigation.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/components/celebration.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/components/footer.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Page-specific CSS -->
    @if (ViewData["Title"]?.ToString().Contains("Home") == true)
    {
        <link rel="stylesheet" href="~/css/pages/home.css" asp-append-version="true" />
    }
    @if (ViewData["Title"]?.ToString().Contains("Report an Issue") == true)
    {
        <link rel="stylesheet" href="~/css/pages/report-form.css" asp-append-version="true" />
    }
    @if (ViewData["Title"]?.ToString().Contains("Report Details") == true)
    {
        <link rel="stylesheet" href="~/css/pages/report-details.css" asp-append-version="true" />
    }
    @if (ViewData["Title"]?.ToString().Contains("All Reports") == true)
    {
        <link rel="stylesheet" href="~/css/pages/view-reports.css" asp-append-version="true" />
    }
    @if (ViewData["Title"]?.ToString().Contains("Local Events") == true || ViewData["Title"]?.ToString().Contains("Service Request Status") == true)
    {
        <link rel="stylesheet" href="~/css/pages/coming-soon.css" asp-append-version="true" />
    }
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                @{
                    var isAdmin = Context.Session.GetString("IsAdmin") == "true";
                }

                @if (isAdmin)
                {
                    <!-- Admin-only brand link points to Admin Dashboard -->
                    <a class="navbar-brand" asp-area="" asp-controller="Admin" asp-action="Dashboard">
                        <i class="fas fa-shield-alt"></i>
                        <span class="d-none d-sm-inline">Admin Portal</span>
                        <span class="d-inline d-sm-none">Admin</span>
                    </a>
                }
                else
                {
                    <!-- Regular users brand link points to Home -->
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="fas fa-city"></i>
                        <span class="d-none d-sm-inline">Municipal Services Portal</span>
                        <span class="d-inline d-sm-none">MSP</span>
                    </a>
                }

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        @if (Context.Session.GetInt32("UserId").HasValue)
                        {
                            var userName = Context.Session.GetString("UserName");

                            @if (isAdmin)
                            {
                                <!-- Admin Menu - Only Dashboard and Admin Options -->
                                <li class="nav-item">
                                    <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Dashboard" ? "active" : "")"
                                       asp-area="" asp-controller="Admin" asp-action="Dashboard">
                                        <i class="fas fa-tachometer-alt"></i>Dashboard
                                    </a>
                                </li>

                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                        <i class="fas fa-user-shield"></i>@userName (Admin)
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a class="dropdown-item" asp-controller="Admin" asp-action="Events">
                                                <i class="fas fa-calendar me-2"></i>Manage Events
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Admin" asp-action="ServiceRequests">
                                                <i class="fas fa-tasks me-2"></i>Service Requests
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="dropdown-item">
                                                    <i class="fas fa-sign-out-alt me-2"></i>Logout
                                                </button>
                                            </form>
                                        </li>
                                    </ul>
                                </li>
                            }
                            else
                            {
                                <!-- Regular User Menu - All Navigation Items -->
                                <li class="nav-item">
                                    <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" && ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")"
                                       asp-area="" asp-controller="Home" asp-action="Index">
                                        <i class="fas fa-home"></i>Home
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "ReportIssue" ? "active" : "")"
                                       asp-area="" asp-controller="ServiceRequest" asp-action="ReportIssue">
                                        <i class="fas fa-exclamation-triangle"></i>Report Issue
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "ViewReports" ? "active" : "")"
                                       asp-area="" asp-controller="ServiceRequest" asp-action="ViewReports">
                                        <i class="fas fa-list"></i>View Reports
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Events" ? "active" : "")"
                                       asp-area="" asp-controller="Events" asp-action="Index">
                                        <i class="fas fa-calendar-alt"></i>Events
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "ServiceStatus" ? "active" : "")"
                                       asp-area="" asp-controller="Home" asp-action="ServiceStatus">
                                        <i class="fas fa-search"></i>Service Status
                                    </a>
                                </li>

                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                        <i class="fas fa-user-circle"></i>@userName
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="dropdown-item">
                                                    <i class="fas fa-sign-out-alt me-2"></i>Logout
                                                </button>
                                            </form>
                                        </li>
                                    </ul>
                                </li>
                            }
                        }
                        else
                        {
                            <!-- Not Logged In - Show All Public Navigation -->
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" && ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")"
                                   asp-area="" asp-controller="Home" asp-action="Index">
                                    <i class="fas fa-home"></i>Home
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "ReportIssue" ? "active" : "")"
                                   asp-area="" asp-controller="ServiceRequest" asp-action="ReportIssue">
                                    <i class="fas fa-exclamation-triangle"></i>Report Issue
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "ViewReports" ? "active" : "")"
                                   asp-area="" asp-controller="ServiceRequest" asp-action="ViewReports">
                                    <i class="fas fa-list"></i>View Reports
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Events" ? "active" : "")"
                                   asp-area="" asp-controller="Events" asp-action="Index">
                                    <i class="fas fa-calendar-alt"></i>Events
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "ServiceStatus" ? "active" : "")"
                                   asp-area="" asp-controller="Home" asp-action="ServiceStatus">
                                    <i class="fas fa-search"></i>Service Status
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Login" ? "active" : "")"
                                   asp-area="" asp-controller="Auth" asp-action="Login">
                                    <i class="fas fa-sign-in-alt"></i>Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Register" ? "active" : "")"
                                   asp-area="" asp-controller="Auth" asp-action="Register">
                                    <i class="fas fa-user-plus"></i>Register
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <main role="main" class="pb-3">
            <div class="main-content">
                @RenderBody()
            </div>
        </main>
    </div>

    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-6 text-center text-md-start">
                    <p>2025 - Municipal Services Portal. All rights reserved.</p>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <p>Empowering communities through technology</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // Enhanced mobile navigation behavior
        document.addEventListener('DOMContentLoaded', function() {
            const navbarToggler = document.querySelector('.navbar-toggler');
            const navbarCollapse = document.querySelector('.navbar-collapse');

            document.querySelectorAll('.navbar-nav .nav-link').forEach(link => {
                link.addEventListener('click', () => {
                    if (navbarCollapse.classList.contains('show')) {
                        navbarToggler.click();
                    }
                });
            });

            document.addEventListener('click', function(e) {
                if (!navbarToggler.contains(e.target) && !navbarCollapse.contains(e.target)) {
                    if (navbarCollapse.classList.contains('show')) {
                        navbarToggler.click();
                    }
                }
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>