@model MunicipalServices.Models.ReportIssueViewModel
@{
    ViewData["Title"] = "Report an Issue";
}

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="text-center mb-4">
            <h2 class="hero-title">
                <i class="fas fa-exclamation-triangle me-2"></i>
                Report an Issue
            </h2>
            <p class="lead">Help us improve your community by reporting issues</p>
        </div>

        <!-- Enhanced Success/Error Messages -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <!-- User Engagement Progress Bar -->
        <div class="mb-4">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <span class="text-muted">Report Progress</span>
                <span class="text-muted">Step 1 of 3</span>
            </div>
            <div class="progress" style="height: 8px; border-radius: 4px;">
                <div class="engagement-progress" role="progressbar" style="width: 33%"></div>
            </div>
            <small class="text-muted mt-1 d-block">Fill in the details below to submit your report</small>
        </div>

        <form asp-action="ReportIssue" method="post" enctype="multipart/form-data" id="reportForm" novalidate>
            @Html.AntiForgeryToken()

            <!-- Enhanced Validation Summary -->
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <h6><i class="fas fa-exclamation-circle me-2"></i>Please correct the following errors:</h6>
                    <ul class="mb-0 mt-2">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    </ul>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <!-- Location Input -->
                    <div class="mb-4">
                        <label asp-for="Location" class="form-label fw-bold">
                            <i class="fas fa-map-marker-alt me-2 text-primary"></i>
                            @Html.DisplayNameFor(m => m.Location)
                            <span class="text-danger">*</span>
                        </label>
                        <input asp-for="Location" class="form-control form-control-lg"
                               placeholder="e.g., Corner of Main St and Oak Ave, Johannesburg"
                               maxlength="200" required
                               data-validation-message="Location is required and must be descriptive" />
                        <span asp-validation-for="Location" class="text-danger"></span>
                        <div class="form-text">
                            <i class="fas fa-info-circle me-1"></i>
                            Please provide the exact location where the issue is occurring
                        </div>
                    </div>

                    <!-- Category Selection -->
                    <div class="mb-4">
                        <label asp-for="Category" class="form-label fw-bold">
                            <i class="fas fa-tags me-2 text-primary"></i>
                            @Html.DisplayNameFor(m => m.Category)
                            <span class="text-danger">*</span>
                        </label>
                        <select asp-for="Category" class="form-select form-select-lg" onchange="updateProgress(); validateCategory(this)" required>
                            <option value="">Please select a category...</option>
                            @foreach (var category in Model.GetCategoriesArray())
                            {
                                <option value="@category">@category</option>
                            }
                        </select>
                        <span asp-validation-for="Category" class="text-danger"></span>
                        <div class="form-text">
                            <i class="fas fa-info-circle me-1"></i>
                            Select the category that best describes your issue
                        </div>
                    </div>

                    <!-- Description -->
                    <div class="mb-4">
                        <label asp-for="Description" class="form-label fw-bold">
                            <i class="fas fa-comment-alt me-2 text-primary"></i>
                            @Html.DisplayNameFor(m => m.Description)
                            <span class="text-danger">*</span>
                        </label>
                        <textarea asp-for="Description" class="form-control" rows="6"
                                  placeholder="Please provide a detailed description of the issue, including when it started, severity, and any other relevant information..."
                                  maxlength="1000" minlength="10" required
                                  onchange="updateProgress(); validateDescription(this)"
                                  oninput="updateCharacterCount(this)"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                        <div class="form-text d-flex justify-content-between">
                            <span>
                                <i class="fas fa-info-circle me-1"></i>
                                Minimum 10 characters required. The more details you provide, the faster we can resolve your issue.
                            </span>
                            <span id="charCount" class="text-muted">0/1000 characters</span>
                        </div>
                    </div>

                    <!-- Enhanced Multiple File Upload Section -->
                    <div class="mb-4">
                        <label asp-for="AttachedFiles" class="form-label fw-bold">
                            <i class="fas fa-paperclip me-2 text-primary"></i>
                            @Html.DisplayNameFor(m => m.AttachedFiles)
                            <span class="text-muted">(Optional)</span>
                        </label>
                        <div class="file-upload-area" id="fileUploadArea">
                            <i class="fas fa-cloud-upload-alt fa-3x text-muted mb-3"></i>
                            <h5>Drag & Drop Multiple Files Here</h5>
                            <p class="text-muted mb-3">or click to browse and select multiple files</p>
                            <input asp-for="AttachedFiles" type="file" class="form-control"
                                   multiple accept="image/*,.pdf,.doc,.docx"
                                   onchange="handleFileSelect(this)" style="display: none;" />
                            <button type="button" class="btn btn-outline-primary" onclick="document.querySelector('input[type=file]').click()">
                                <i class="fas fa-folder-open me-2"></i>Choose Multiple Files
                            </button>
                            <div class="form-text mt-2">
                                <i class="fas fa-info-circle me-1"></i>
                                Supported formats: Images (JPG, PNG, GIF), PDF, Word documents. Max 5MB per file.
                                <br>
                                <i class="fas fa-plus-circle me-1 text-success"></i>
                                <strong>You can select multiple files at once using Ctrl+Click or Shift+Click!</strong>
                                <br>
                                <i class="fas fa-hand-pointer me-1 text-info"></i>
                                <strong>Drag & drop multiple files to add them to your existing selection!</strong>
                            </div>
                        </div>
                        <div id="fileList" class="mt-3"></div>
                        <span asp-validation-for="AttachedFiles" class="text-danger"></span>
                    </div>

                    <!-- Enhanced Community Impact Section -->
                    <div class="mb-4 p-3 bg-light rounded">
                        <div class="d-flex align-items-center">
                            <div class="me-3">
                                <i class="fas fa-users fa-2x text-success"></i>
                            </div>
                            <div>
                                <h6 class="mb-1">Community Impact</h6>
                                <p class="mb-0 text-muted" id="engagementMessage">
                                    Your report helps improve the community for everyone!
                                </p>
                            </div>
                        </div>
                        <div class="mt-2">
                            <div class="progress" style="height: 6px;">
                                <div class="progress-bar bg-success" role="progressbar"
                                     style="width: 75%" id="communityProgress"></div>
                            </div>
                            <small class="text-muted">Community participation: 75% of residents actively report issues</small>
                        </div>
                    </div>

                    <!-- Submit Button -->
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg" id="submitBtn" disabled>
                            <i class="fas fa-paper-plane me-2"></i>
                            Submit Report
                        </button>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>
                            Back to Main Menu
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/pages/report-form.js" asp-append-version="true"></script>
}